string word = "circulation";

            char [ ] character= new char[word.Length];

            for (int i = 0; i < word.Length; i++) //for copy
			{
			 character[i]=Convert.ToChar(word.Substring(i,1));
			}
            for (int i = 0; i <word.Length; i++) //to show
			{
                Console.WriteLine(character[i]);
			}
            Console.ReadLine();
